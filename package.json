{
  "name": "cli-engine-config",
  "description": "base cli-engine config objects and interfaces",
  "version": "4.0.1-ts.12",
  "author": "Jeff Dickey @dickeyxxx",
  "bugs": "https://github.com/heroku/cli-engine-config/issues",
  "dependencies": {
    "cli-flags": "^1.0.10",
    "fs-extra": "^4.0.2",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^4.0.2",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.28",
    "babel-core": "^6.26.0",
    "del-cli": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "^21.0.2",
    "lint-staged": "^4.1.3",
    "mock-fs": "^4.4.1",
    "prettier": "^1.6.1",
    "remap-istanbul": "^0.9.5",
    "ts-jest": "^21.0.0",
    "typescript": "^2.5.2"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/heroku/cli-engine-config",
  "jest": {
    "coverageReporters": [
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "keywords": [
    "heroku",
    "heroku-cli-plugin"
  ],
  "license": "ISC",
  "lint-staged": {
    "**/*.ts": [
      "prettier --write",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "main": "lib/config.js",
  "repository": "heroku/cli-engine-config",
  "scripts": {
    "coverage": "cat coverage/coverage-final.json | remap-istanbul -o coverage/coverage-final.json && curl -s https://codecov.io/bash | bash",
    "precommit": "lint-staged",
    "prepare": "del lib && tsc",
    "pretest": "tsc --sourcemap",
    "test": "jest"
  },
  "types": "./lib/config.d.ts"
}
